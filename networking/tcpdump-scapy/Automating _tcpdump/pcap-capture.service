
[Unit]
Description=Automated Packet Capture Service
Wants=network-online.target
After=network-online.target
StartLimitInterval=60
StartLimitBurst=5

[Service]
Type=forking
ExecStart=/usr/local/bin/pcap-capture.sh
Restart=always
RestartSec=5
User=root
Group=root

[Install]
WantedBy=multi-user.target

